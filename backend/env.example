# 数据库配置
DATABASE_URL=sqlite:///./markdown_to_pdf.db

# JWT配置
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 应用配置
DEBUG=true
APP_NAME="Markdown转PDF API"
APP_VERSION="1.0.0"

# 安全配置
BCRYPT_ROUNDS=12

# 文件上传配置
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=[".md", ".txt"]

# 会员配置
FREE_USER_DOCUMENT_LIMIT=5
FREE_USER_CONVERSION_LIMIT=10

# CORS配置
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"] 